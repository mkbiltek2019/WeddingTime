@model AIT.WebUIComponent.Models.Guests.MembersModel

@foreach (var person in Model.Members)
{
    if (Model.OpenTag(person))
    {
        @:<li class="list-group-item">
            @:<div class="list-item-content">
                @:<div class="members-content @(string.Format("{0}-{1}", person.IsInnerGroupMember ? "connect-to-inner-group" : "single-person", Model.UniqueId))" key="@person.InnerGroupKey">                    
    }

                    Html.RenderPartial("_Person", person);

    if (Model.CloseTag(person))
    {                    
                @:</div>        
                @:<div class="list-item-handle" title="Przeciągnij osobę"></div>            
            @:</div>
        @:</li>                    
    }
}