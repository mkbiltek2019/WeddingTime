@model AIT.WebUIComponent.Models.Guests.GroupModel

<div class="modal fade" id="createGroupModal" tabindex="-1" role="dialog" aria-labelledby="lblCreateGroup" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            @using (Ajax.BeginForm("AddGroup", "Guests", null, new AjaxOptions
            {
                OnBegin = "groupManager.beforeCreate",
                OnSuccess = "groupManager.onCreateSuccess",
                OnFailure = "groupManager.onCreateFailure"
            }, new { autocomplete = "off" }))
            {
                <div class="modal-header">
                    <button type="button" class="btn-rounded btn-small btn-dismiss right" data-dismiss="modal" aria-hidden="true">
                        <span class="icon icon-sm icon-cancel"></span>
                    </button>
                    <h4 class="modal-title" id="lblCreateGroup">STWÓRZ NOWĄ GRUPĘ</h4>
                </div>
                <div class="modal-body">
                    <div class="form-ctrl-area">
                        @Html.TextBoxFor(n => n.Name, new { @class = "form-ctrl uppercase", placeholder = "Nazwa grupy", id = "txtGroupName" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn-rounded btn-turquoise disabled" title="Zapisz">
                        <span class="icon icon-lg icon-save"></span>
                    </button>
                </div>
            }
        </div>
    </div>
</div>